<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:JMXFileEditor.Styles">

    <!-- Main Palette -->
    <Color x:Key="BackgroundMain">#F1F1F1</Color>
    <SolidColorBrush x:Key="BackgroundMainBrush" Color="{StaticResource BackgroundMain}"/>

    <Color x:Key="ForegroundMain">#222</Color>
    <SolidColorBrush x:Key="ForegroundMainBrush" Color="{StaticResource ForegroundMain}"/>

    <Color x:Key="BackgroundAccentMain">#00BBFF</Color>
    <SolidColorBrush x:Key="BackgroundAccentMainBrush" Color="{StaticResource BackgroundAccentMain}"/>

    <Color x:Key="BackgroundDark">#E1E1FF</Color>
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}"/>




</ResourceDictionary>