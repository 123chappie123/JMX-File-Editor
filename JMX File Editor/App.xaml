<Application x:Class="JMXFileEditor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:JMXFileEditor"
            xmlns:pkgColorPickerConv="clr-namespace:ColorPicker.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Colors.xaml"/>
                <!-- Like CSS, order is important here -->
                <ResourceDictionary Source="Styles/TextBox.xaml"/>
                <ResourceDictionary Source="Styles/Menu.xaml"/>
                <ResourceDictionary Source="Styles/TreeView.xaml"/>
                <ResourceDictionary Source="Styles/Button.xaml"/>
                <ResourceDictionary Source="Resources/Packages/ColorPicker/Styles/Images.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <pkgColorPickerConv:ColorToBrushConverter x:Key="ColorToBrushConverter" />
        </ResourceDictionary> 
    </Application.Resources>
</Application>
